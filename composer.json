{
    "name": "user/boutique",
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },

    "files": [
         "app/helpers.php",
         "config/constants.php"
        ]
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "laravel/pint": "^1.27",
        "rector/rector": "^2.3"
    },
    "scripts": {
        "lint": "vendor/bin/pint --test",
        "fix": ["vendor/bin/pint", "vendor/bin/rector"],
        "analyse": "vendor/bin/phpstan analyse",
        "refactor": "vendor/bin/rector --dry-run",
        "quality": [
            "@lint",
            "@analyse"
        ],
	"check": [ 
		"@analyse",
		"@lint"
	],
	"pre-commit": ["@check"]
	
    }
}
